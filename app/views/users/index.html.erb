<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render'users/userinfo', user: current_user %>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <h1>Users</h1>
        <tread>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>

        <tbody><% @users.each do |user| %>

          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image_id, :fill, 100, 100, format:'jpeg', class: "pull-left profile-img", fallback:"no_image.jpg" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>

        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>