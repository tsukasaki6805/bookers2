<div class="container">
  <div class="row">
    <div class="col-xs-3">
<% if @user.errors.any? %>
      <%= @user.errors.count %> error<br>
      <%= @user.errors.full_messages.each do |message| %>
        <%= message %><br>
      <% end %>
<% end %>
<%= form_for(@user) do |f| %>
    <h1>User info</h1>
      <div class="form-group has-icon">
         <h4>Name</h4>
        <label class="control-label sr-only" for="inputEmail">Name</label>
        <%= f.text_field :name, class:"form-control name", placeholder:"Name" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true" ></span>
      </div>
      <div class="form-group has-icon">
        <h4>Image</h4>
        <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
        <%= f.attachment_field :profile_image, placeholder:"ProfileImage", class:"user-edit-form" %>
      </div>
      <div class="form-group has-icon">
        <h4>Introduction</h4>
        <label class="control-label sr-only">Introduction</label>
        <%= f.text_area :introduction, class:"form-control introduction" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true" ></span>
      </div>
      <%= f.submit "Update User", class:"btn btn-default btn-block btn-base-1 mt-20" %>
<% end %>
  </div>
</div>