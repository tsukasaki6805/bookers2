<h1>New book</h1>

<% if book.errors.any? %>
  <div class="alert alert-warning">
   <div><%= book.errors.count %> error prohibited this book from being saved:</div>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: book, local:true do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Option</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>