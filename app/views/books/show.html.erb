<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= render'users/userinfo', user: @book.user %>
     <%= render 'books/form', book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <table class="table">
       <h1>Book detail</h1>
        <thead>
          <tr>
           <th></th>
           <th></th>
           <th></th>
          </tr>
        </thead>
        <tr>
          <td>
             <%= link_to(user_path(@book.user), class: 'list-content') do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format:'jpeg', class: "pull-left profile-img", fallback:"no_image.jpg" %>
              <br>
              <br>
              <br>
              <%= @book.user.name %>
             <% end %>
          </td>
           <th><%= link_to @book.title %></th>
           <th><%= @book.body %></th>
            <% if @book.user == current_user %>
             <td>
              <button type="button" class="btn btn-info"><%= link_to "Edit",edit_book_path, class: "edit_book_#{@book.id}" %></button>
             </td>
             <td>
              <button type="button" class="btn btn-danger"><%= link_to 'Destroy', @book_path, method: :delete, data: { confirm: 'Are you sure?'} %></button>
             </td>
            <% end %>
        </tr>
    </div>
  </div>
</div>