<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
   <div><%= @book.errors.count %> error prohibited this book from being saved:</div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>
<% end %>
